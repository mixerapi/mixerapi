{
  "name": "mixerapi/mixerapi",
  "description": "Streamline development of API-first applications in CakePHP",
  "type": "project",
  "license": "MIT",
  "keywords": ["cakephp"],
  "require": {
    "php": ">=7.2",
    "cakephp/cakephp": "^4.0 < 4.2",
    "cnizzardini/cakephp-swagger-bake": "@dev",
    "friendsofcake/search": "^6.0",
    "mixerapi/bake": "@dev",
    "mixerapi/collection-view": "@dev",
    "mixerapi/core": "@dev",
    "mixerapi/exception-render": "@dev",
    "mixerapi/hal-view": "@dev",
    "mixerapi/json-ld-view": "@dev",
    "mixerapi/rest": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "~8.5.0",
    "cakephp/cakephp-codesniffer": "^4.2",
    "phpstan/phpstan": "^0.12.32",
    "phpmd/phpmd": "^2.8"
  },
  "autoload": {
    "psr-4": {
      "MixerApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MixerApi\\Test\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@test",
      "@cs-check",
      "@stan",
      "@md"
    ],
    "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/",
    "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/",
    "stan": "phpstan analyse src/",
    "test": "phpunit --colors=always",
    "md": "phpmd src/ ansi phpmd.xml",
    "coverage": "phpunit --coverage-html coverage-reports/"
  },
  "support": {
    "source": "https://github.com/mixerapi/mixerapi"
  },
  "authors": [
    {
      "name": "MixerApi",
      "role": "Organization"
    }
  ],
  "prefer-stable": true,
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "path",
      "url": "/var/www/personal/mixerapi/bake",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "/var/www/personal/mixerapi/collection-view",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "/var/www/personal/mixerapi/core",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "/var/www/personal/mixerapi/exception-render",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "/var/www/personal/mixerapi/hal-view",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "/var/www/personal/mixerapi/json-ld-view",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "/var/www/personal/mixerapi/rest",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "/var/www/personal/cakephp-swagger-bake",
      "options": {
        "symlink": true
      }
    }
  ]
}
